<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="14dp">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="26dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#D09CD6"
            android:padding="10dp"
            android:orientation="vertical" >

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="26dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/image_card"
                    android:layout_width="140dp"
                    android:layout_height="110dp"
                    android:src="@drawable/red_hoodie"
                    android:layout_gravity="center_horizontal"/>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="10dp">
                <TextView
                    android:id="@+id/name_product_card"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:text="Red hoodie"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginTop="2dp"
                    android:textAlignment="center"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/price_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="60"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:layout_marginRight="10dp" />
                    <TextView
                        android:id="@+id/icon_dollars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:text="Items: "/>
                    <TextView
                        android:id="@+id/productsCounter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="3dp"
                        android:text="1"/>
                    <TextView
                        android:id="@+id/btn_increment_plus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#DF86E6"
                        android:text="+"
                        android:textSize="30sp"
                        android:layout_marginLeft="3dp"
                        android:textAlignment="center"
                        android:contentDescription="more"/>
                    <TextView
                        android:id="@+id/btn_increment_minus"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="#DF86E6"
                        android:text="-"
                        android:textSize="30sp"
                        android:layout_marginLeft="3dp"
                        android:textAlignment="center"
                        android:contentDescription="more"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>